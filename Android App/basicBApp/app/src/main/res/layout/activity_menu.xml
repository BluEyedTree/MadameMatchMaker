<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hfad.basicbapp.MenuActivity"
    android:background="@color/lightSkyBlu">

    <TextView
        android:id="@+id/username"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:layout_marginLeft="94dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/Black"
        android:fontFamily="sans-serif-condensed"
        android:padding="12dp"
        android:text="View Matches"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/lightSkyBlu"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatButton2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButton2"
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/Black"
        android:fontFamily="sans-serif-condensed"
        android:padding="12dp"
        android:text="Request Matches"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/lightSkyBlu"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="208dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

</android.support.constraint.ConstraintLayout>
